<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#1A1A1A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Folder Icon Container -->
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/folder_icon_background">

    <ImageView
        android:id="@+id/folderIconImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
        android:src="@drawable/ic_folder"
                android:contentDescription="Folder Icon"
                android:tint="#2196F3"/>
        </FrameLayout>

        <!-- Folder Info Section -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Folder Name Text -->
        <TextView
            android:id="@+id/folderNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:textSize="16sp"
            android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:maxLines="1"
                android:ellipsize="end"
        tools:text="Camera" />

        <!-- Video Count Text -->
        <TextView
            android:id="@+id/videoCountTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
                android:textColor="#B3FFFFFF"
                android:layout_marginTop="4dp"
        tools:text="5 videos" />
    </LinearLayout>

        <!-- Arrow Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right"
            android:tint="#B3FFFFFF"
            android:contentDescription="Navigate to folder"/>

</LinearLayout>

</com.google.android.material.card.MaterialCardView>
